---
import Button from './Button.astro'
import Button2 from "../components/Button2.astro";
const { name, info, info2, info3, money, style, button, } = Astro.props;

const stylecolor={
  red:"bg-red-200 text-red-800 ",
  blue:"bg-blue-200 text-blue-900",
  orange:"bg-orange-400 text-orange-800",
  sennep:"bg-sennep-300 text-sennep-900"
}
---
<div class={`${stylecolor[style]}`}>
<div class=" flex items-center pt-s pb-s pr-s gap-m md:gap-4xl max-w-[393px] md:max-w-[1052px]">
    <img class="h-[120px] md:h-[250px]" src="public/solhalv.png" alt="halv sol"> 
    <div class="flex flex-col justify-end items-start gap-[16px] md:gap-xl max-w-[209px] md:max-w-[810px]">
        <div class="font-bold md:flex md:justify-between items-center ">
      <h1 class="text-s md:text-l">{name}</h1>
        <p class="md:text-m">18 - 19 - 20 Juli</p>
    </div>
    <div class="md:flex md:justify-between md:items-end w-auto">
      <div class="flex flex-col gap-xs">
       <p >{info}</p>
       <p >{info2}</p>
       <p >{info3}</p>
      </div>
       <p class="font-bold text-xs md:text-m">{money}</p>
    </div>
 <div class="flex items-center">
 <div class="hidden md:block"><Button2 variant="secondary">{button}</Button></div>
 <div class="md:hidden"><Button2 size="small">{button}</Button></div>
</div>
    </div>
</div>
</div>