---
import Button from "../components/Button.astro";
import MainLayout from "./MainLayout.astro";
const { frontmatter } = Astro.props;
---

<MainLayout title="Titel">
  <div class="h-[200px] md:h-[420px] bg-cover -mt-10 bg-[url('/program.webp')]"></div>
  <h1 class="font-bold text-l md:text-3xl text-orange-600 uppercase md:pl-9xl px-xl md:px-0">{frontmatter.kunstner}</h1>

  <div class="-pt-10xl flex flex-col md:pr-0 md:pl-9xl items-start gap-m md:gap-3xl bg-blue-600">
    <div class="flex flex-col md:flex-row md:items-start md:gap-9xl">
      <section class="flex flex-col justify-start gap-m md:gap-3xl px-xl md:px-0 pt-3xl">
        <div class="flex flex-col justify-start gap-s md:gap-xl">
          <p class="text-m md:text-l text-yellow-500 font-grotesk font-bold">{frontmatter.dato}</p>
          <p class="text-s md:text-m text-yellow-50 font-grotesk font-medium">{frontmatter.tid}</p>
        </div>

        <div class="text-yellow-50 text-xs md:text-s font-roboto font-normal"><slot /></div>

        <a class="mb-3xl" href="">
          <Button variant="secondary">&#8592;TILBAGE</Button>
        </a>
      </section>

      <img src={frontmatter.singleimage} alt={frontmatter.singlealt} class="md:h-[700px] md:w-[909.471px] w-[393px] m-auto md:m-0
      h-[414px]" />
    </div>
  </div>
</MainLayout>
